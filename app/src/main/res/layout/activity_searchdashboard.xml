<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anasion.anavel.myapplication.SearchDashboardActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id ="@+id/activity_searchdashboard"
    android:configChanges="orientation"
    android:background="#fff"
    android:screenOrientation="portrait">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id ="@+id/dashboardSearchSearchScroller">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff">

                <!-- Cover Image -->

                <ImageView
                    android:id="@+id/dashboardSearchCoverimageImageview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/defaultcover" />

                <!-- Round image -->
                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/dashboardSearchProfilimageImageview"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/defaultpp"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center"
                    app:view_borderWidth="2dp"
                    app:view_borderColor="#cccccc" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <TextView
                    android:id="@+id/dashboardSearchNameTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom Cruise"
                    android:textSize="22dp"
                    android:textColor="@color/title_color"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/dashboardSearchAboutTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syracuse, New York"
                    android:layout_gravity="center"
                    android:textColor="@color/title_color"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textColor="@color/status_color"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/dashboardSearchStatusTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/status_color"
                    android:text="Stars can't shine without darkness...\nLife can't shine without pain..."
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/dashboardSearchFollowButton"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="FOLLOWING"
                android:textColor="@color/edit_profile"
                android:textAlignment="center"

                android:background="@drawable/textviewfollowing"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/dashboardSearchPostTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Post"
                        android:textColor="@color/status_color"
                        android:textSize="14dp" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/dashboardSearchFollowerTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/status_color"
                        android:layout_weight="1"
                        android:text="Followers"
                        android:textSize="14dp"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/dashboardSearchFollowingTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/status_color"
                        android:layout_weight="1"
                        android:text="Following"
                        android:textSize="14dp"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="fitXY"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:src="@drawable/olegimage" />-->

                <com.anasion.anavel.myapplication.ExpandableHeightGridView
                    android:id="@+id/searchgridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:horizontalSpacing="-25dp"
                    android:isScrollContainer="false"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_black_bgcolor"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/searchDashboardAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/useravatar"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchDashboardUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus"
                android:layout_gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/searchDashboardSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/search" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
