<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.anasion.anavel.myapplication.SearchActivity"
    android:id ="@+id/activity_search"
    android:configChanges="orientation"
    android:screenOrientation="portrait">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:padding="16dp">

            <EditText
                android:id="@+id/searchEdittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edittextdash"
                android:textColor="@color/edit_profile"
                android:textColorHint="@color/edit_profile"
                android:hint="username"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawablePadding="16dp"
                android:scrollHorizontally="false"
                >
            </EditText>

            <Button
                android:id="@+id/searchButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:background="@drawable/abc_ic_search_api_mtrl_alpha"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/searchResultButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/edit_profile"
                android:textSize="15dp"
                android:layout_below="@+id/searchEdittext"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/buttonsearch"
                android:drawableLeft="@drawable/defaultsearch"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="100dp"
                />

            <TextView
                android:id="@+id/searchResultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:padding="20dp"
                android:textSize="19dp"
                android:layout_below="@+id/searchEdittext"
                android:text="No Result..."
                android:gravity="center"
                android:textColor="@color/edit_profile"
                />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_black_bgcolor"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dashboardHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bottommenuhome" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dashboardAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bottommenuaccount" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/dashboardUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottommenupost"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/dashboardFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottommenufav" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dashboardSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_ic_search_api_mtrl_alpha" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
